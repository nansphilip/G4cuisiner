{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@actions/*": ["./actions/*"],
            "@app/*": ["./app/*"],
            "@comps/*": ["./components/*"],
            "@lib/*": ["./lib/*"],
            "@prisma/*": ["./prisma/*"],
            "@public/*": ["./public/*"],
            "@/*": ["./*"]
        },
        "target": "ES2017"
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
        // "prisma/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
